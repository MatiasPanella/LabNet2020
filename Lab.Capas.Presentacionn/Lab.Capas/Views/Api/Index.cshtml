@model  Lab.Capas.Models.Root
@{
    ViewBag.Title = "Index";
}

<h2>Rick and Morty's Characters</h2>
<div>
    <table class="table table-hover table-responsive">
        <tr class="success">
            <td>Name</td>
            <td>Avatar</td>
            <td>Specie</td>
        </tr>
        <br/>
        @foreach (var item in Model.Results)
        {
            <tr>
                <td>@item.Name</td>
                <td><img src="@item.Image" alt="Alternate Text" style="width:80px; height:80px;" /></td>
                <td>@item.Species</td>
            </tr>
        }
    </table>
</div>
