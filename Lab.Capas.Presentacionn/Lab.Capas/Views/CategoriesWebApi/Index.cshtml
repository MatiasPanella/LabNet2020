@model  IEnumerable<Lab.Capas.Models.CategoriesView>

@{
    ViewBag.Title = "Index";
}

<br />

<p>
    <a href="@Url.Action("AddOrEdit","CategoriesWebApi")" class="btn btn-default"><i class="fade  fa-plus"></i>Create New Category</a>
</p>
<table class="table table-responsive table-striped">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Descritpion</th>
    </tr>
     
@foreach (var item in Model) {
    <tr>
        <td>@item.CategoryId</td>
        <td>@item.CategoryName</td>
        <td>@item.Description</td>
        <td>
           <a href="@Url.Action("AddOrEdit","CategoriesWebApi", new { id = item.CategoryId })" class="btn btn-default"><i class="fa fa-pencil"></i>Edit</a> 
           <a onclick="Delete(@item.CategoryId)" class="btn btn-default"><i class="fa fa-trash"></i>Delete</a>
        </td>
    </tr>
}

</table>

@section scripts {
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success();
        })
        function Delete(id) {
            alertify.confirm('Web Api CRUD Operations', 'Are you sure to delete this record?', function () {
                window/location.href = '@Url.Action("Delete","CategoriesWebApi")/' + id
            }, null);
        }
        </script>
    }